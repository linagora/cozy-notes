@require 'settings/breakpoints.styl'

.header
    position fixed // To be above the cozy-bar
    z-index calc(var(--zIndex-bar) + 1) // To be above the cozy-bar
    width 100%

.header-menu
    align-items center
    box-shadow var(--shadow1)
    display flex
    padding-left 0rem
    padding-right 1rem
    height 3rem
    z-index var(--zIndex-low) // Needed for the drop-shadow to be above the editor area

    +small-screen('min')
        padding-left 1rem
        padding-right 1rem

.app-icon
.home-link
    display block
    height 32px
    width 32px

.app-icon
    margin-right 1rem

.file-infos
    align-items center
    display flex
    flex-grow 1

